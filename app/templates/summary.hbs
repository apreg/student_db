<div class="col-md-10 col-md-offset-2 left-border main-content-container">
    <h1>Summary</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="example-container">
                <div class="ember-table-example-container" style="height:400px;">
                    {{table-component
                    hasFooter=false
                    selection=selection
                    columnsBinding="columns"
                    contentBinding="content"}}
                    <button type="button" {{bind-attr disabled="isEditDisabled"}} class="btn btn-default">Edit</button>
                    <button type="button" {{bind-attr disabled="isNewDisabled"}} class="btn btn-default">New</button>
                    <button type="button" {{action 'delete'}} {{bind-attr disabled="isDeleteDisabled"}}class="btn btn-default">Delete</button>
                    <button type="button" {{action 'save'}} {{bind-attr disabled="isSaveDisabled"}}class="btn btn-default">Save</button>
                    <button type="button"  {{bind-attr disabled="isCloseDisabled"}}class="btn btn-default">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>